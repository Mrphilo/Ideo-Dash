{% extends 'base.html.twig' %}

{% block content %}
    <h1>Services list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Libelle</th>
                <th>Softskills</th>
                <th>Surmesure</th>
                <th>Langue</th>
                <th>Bureautique</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for service in services %}
            <tr>
                <td><a href="{{ path('service_show', { 'id': service.id }) }}">{{ service.id }}</a></td>
                <td>{{ service.libelle }}</td>
                <td>{% if service.softSkills %}Yes{% else %}No{% endif %}</td>
                <td>{% if service.surMesure %}Yes{% else %}No{% endif %}</td>
                <td>{% if service.langue %}Yes{% else %}No{% endif %}</td>
                <td>{% if service.bureautique %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('service_show', { 'id': service.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('service_edit', { 'id': service.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('service_new') }}">Create a new service</a>
        </li>
    </ul>
{% endblock %}
