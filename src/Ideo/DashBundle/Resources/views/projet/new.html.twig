{% extends 'base.html.twig' %}
{% block page_name %}Ajouter un projet{% endblock %}
{% block content %}

    <section class="content">
        <div class="row">
            <div class="col-md-6">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Formulaire projet</h3>
                    </div>

                    <div class="box-body">

                        {{ form_start(form) }}
                        <div class="form-group">
                            Code
                            {{ form_widget(form.code, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            Nom
                            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            Effectif prévu
                            {{ form_widget(form.effectifPrevu, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            Date du lancement
                            {{ form_widget(form.dateLancement, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="form-group">
                            Date de clôture
                            {{ form_widget(form.dateFin, {'attr': {'class': 'form-control'}}) }}
                        </div>

                        <div align="right">
                            <input type="submit" value="Créer le projet" />
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </section>

    <section>
        <a href="{{ path('projet_list') }}">
            <button type="button" class="btn btn-info btn-xs">
                Liste des projets
            </button>
        </a>
    </section>
{% endblock %}
